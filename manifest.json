{
  "manifest_version": 3,
  "name": "noscroll",
  "version": "1.0",
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": ["*://*.instagram.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.instagram.com/reels/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "blocker.html"
  }
}